{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "paths": {
            "@kitcon/core/*": [
                "../kitcon-core/src/*"
            ],
            "@kitcon/node/*": [
                "../kitcon-node/src/*"
            ],
            "@kitcon/ui/*": [
                "../kitcon-ui/src/*"
            ]
        }
    }
}